pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                bat "mvn -Dmaven.test.failure.ignore-true clean package"
            }

        }
        stage('Test Analyse') {
            steps {
                bat "mvn test"
                bat "mvn checkstyle:checkstyle"
                bat "mvn spotbugs:spotbugs"
                bat "mvn pmd:pmd"
            }
            
        }
        stage('Package') {
            steps {
                echo "Package Stage"
            }
        }
        stage('Publish') {
            steps {
                echo "Publish Stage"
            }
        }     
    }
      post {
        success {
        junit '**/target/surefire-reports/TEST-*.xml'
        archiveArtifacts 'target/*.jar'
      }
    }
}
